        script.
            function setUser(userInfo) {
                let user = null
                userData.forEach(us=> function () {
                        if (us.login.uuid === userInfo)
                            user = us
                    })
                if (user == null)
                    alert('Error al recuperar la informaci√≥n')

                const htmlResponse = document.querySelector('#sellerInfo')
                htmlResponse.innerHTML = `<div class="card-image">
                    <img src="${user.picture.large}" alt="User Picture">
                </div>
                <div class="card-stacked">
                <b>Nombre:&nbsp;</b> ${user.name.first} ${user.name.last}
                </div>`
            }